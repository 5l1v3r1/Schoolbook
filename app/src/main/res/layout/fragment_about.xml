<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.marco.marplex.schoolbook.fragments.AboutFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardElevation="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="L&apos;applicazione è stata sviluppata da Marco Cimolai, studente dell'Istituto tecnico settore tecnologico J.F.Kennedy di Pordenone"
                        android:id="@+id/textView12"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:layout_alignParentTop="true"
                        android:textIsSelectable="false"
                        android:textSize="20dp"
                        android:textColor="#424242" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:id="@+id/imageView2"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignBottom="@+id/textView12" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:onClick="showGithub"
                app:cardElevation="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Schoolbook è open source! L&apos;intero codice lo puoi trovare su GitHub"
                        android:id="@+id/textView13"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_toRightOf="@+id/imageView3"
                        android:layout_toEndOf="@+id/imageView3"
                        android:layout_alignParentTop="true"
                        android:textSize="20dp"
                        android:textColor="#424242" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="300dp"
                        android:id="@+id/imageView3"
                        android:src="@drawable/github"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        android:layout_alignBottom="@+id/textView13"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showGithub"
                app:cardElevation="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="10dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uno speciale ringraziamento va anche a"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:id="@+id/textView14" />

                    <LinearLayout
                        android:id="@+id/lib_list"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
