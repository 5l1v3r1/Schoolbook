<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/lib_model_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:id="@+id/img_icon"
        android:src="@drawable/github"
        android:scaleType="fitCenter"
        android:cropToPadding="false"
        android:contextClickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_icon"
        android:layout_toRightOf="@+id/img_icon"
        android:layout_toEndOf="@+id/img_icon"
        android:layout_marginLeft="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Simbiose"
            android:id="@+id/txt_creator_library"
            android:textSize="26dp"
            android:layout_alignTop="@+id/img_icon"
            android:layout_toRightOf="@+id/img_icon"
            android:layout_toEndOf="@+id/img_icon"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="che ha sviluppato"
            android:id="@+id/textView16"
            android:textSize="20dp"
            android:gravity="bottom"
            android:layout_below="@+id/txt_creator_library"
            android:layout_alignLeft="@+id/txt_creator_library"
            android:layout_alignStart="@+id/txt_creator_library" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Encryption"
            android:id="@+id/txt_library_name"
            android:layout_below="@+id/textView16"
            android:layout_toRightOf="@+id/img_icon"
            android:layout_toEndOf="@+id/img_icon"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>