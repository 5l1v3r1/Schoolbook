<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.marco.marplex.schoolbook.CompareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_weight="1">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1° Periodo"
                    android:textColor="#808080"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cpb_background_progressbar_color="#d7d7d7"
                        app:cpb_background_progressbar_width="12dp"
                        app:cpb_progressbar_color="@color/colorPrimaryOrange"
                        app:cpb_progressbar_width="12dp"
                        android:id="@+id/pbar_materiaPrimo"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="9"
                        android:id="@+id/txt_mediaMateria"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textColor="#5e5e5e"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Matematica"
                    android:id="@+id/txt_materiaPrimoperiodo"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#808080"
                    android:layout_below="@+id/pbar_materiaPrimo"
                    android:layout_centerHorizontal="true" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="-5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_weight="1">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2° Periodo"
                    android:textColor="#808080"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cpb_background_progressbar_color="#d7d7d7"
                        app:cpb_background_progressbar_width="12dp"
                        app:cpb_progressbar_color="@color/colorPrimaryOrange"
                        app:cpb_progressbar_width="12dp"
                        android:id="@+id/pbar_materiaSecondo"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="9"
                        android:id="@+id/txt_mediaMateria2"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textColor="#5e5e5e"
                        android:layout_alignParentTop="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Matematica"
                    android:id="@+id/txt_materiaSecondoperiodo"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#808080"
                    android:layout_below="@+id/pbar_materiaPrimo"
                    android:layout_centerHorizontal="true" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>